<% content_for :title, "Login" %>

<section id='login-box'>
	<h2>Login</h2>
	<form id='login-form' remote='true' action='/login' method='POST'>
		<div className='fields'>
			<label for='login-form-email'>Email</label>
			<input id='login-form-email' type='text' name='session[email]' placeholder='Email' />
			<input type='password' name='session[password]' placeholder='Password' />
		</div>
	  <div className='buttons'>
	  	<input id='submit-login' className='affirm' type='submit' />
	  </div>
	</form>
</section>


  <h2>Login</h2>
  <%= form_for 'session', html: { id: 'login-form' } do |f| %>
    <div class="fields">
      <%= f.label :email %>
      <%= f.text_field :email, placeholder: 'Email address' %>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Password' %>
    </div>

    <div class="buttons">
      <%= f.submit "Login", class: "affirm", id: "do-login" %>
    </div>
  <div class="buttons">
    <%= button_to 'Cancel', root_path, method: :get, class: "disaffirm" %>
  </div>
  <% end %>
